<!DOCTYPE html>
<html>
  <head>
    <title>BlogApp</title>
    <%= render 'layouts/rails_default' %>
    <%= render 'layouts/shim' %>
  </head>

  <body>

  <%= render 'layouts/header' %>

  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <% flash.each do |key, message| %>
          <div class="text-center alert alert-<%= key == 'notice'? 'success': 'danger' %>">
            <%= message %>
          </div>
        <% end %>
        <%= yield %>
      </div>
    </div>
  </div>

  </body>
</html>
